{
  "compilerOptions": {
    "allowJs": true, 
    "esModuleInterop": true, 
    "baseUrl": "./src", 
    "paths": { 
      "~/*": [
        "./*"
      ]
    },
    "module": "commonjs", 
    "target": "es5", 
    "lib": [
      "es2021"
    ], 
    "outDir": "build", 
    "strict": true, 
    "noImplicitAny": false, 
    "resolveJsonModule": true, 
    "moduleResolution": "node", 
    "forceConsistentCasingInFileNames": true 
  },
  "compileOnSave": true, 
  "include": [ 
    "src/**/*"
, "bootstrap.ts"  ],
  "exclude": [ 
    "node_modules"
  ]
}